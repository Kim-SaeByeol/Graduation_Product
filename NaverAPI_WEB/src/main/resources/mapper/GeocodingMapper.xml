<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kopo.poly.mapper.IGeocodingMapper">

    <!-- 위도 경도 등록 쿼리 -->
    <insert id="insertGeocoding" parameterType="GeocodingDTO">
        INSERT INTO Center (X, Y)
        VALUES (#{xAddress}, #{yAddress});
    </insert>

    <!-- Address가 수정이 되었다면 위도 경도 수정 쿼리 -->
    <update id="updateGeocoding" parameterType="GeocodingDTO">
        UPDATE Center
        SET XADDRESS = #{xAddress},
            YADDRESS = #{yAddress}
        WHERE ADDRESS = #{address};
    </update>


</mapper>